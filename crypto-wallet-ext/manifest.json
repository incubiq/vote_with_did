{
    "manifest_version": 3,
    "name": "Voting App",
    "version": "1.0.0",
    "description": "A browser extension for managing Voting via digital identity and credentials.",
    "permissions": ["storage", "activeTab"],
    "host_permissions": [
      "https://identity.opensourceais.com/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }